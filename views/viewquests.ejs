<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quest Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-4xl mx-auto my-6">
        <h1 class="text-2xl font-bold text-center text-gray-700 mb-6">Quest Tracker</h1>

        <!-- Quest Form -->
        <form action="api/savequeststatus" method="POST">
            <% quests.forEach(function(quest, index) { %>
                <div class="mb-6 p-4 bg-gray-50 rounded-lg shadow-md">
                    <!-- Quest Title -->
                    <h2 class="text-lg font-bold text-gray-700"><%= quest.title %></h2>

                    <!-- Quest Description -->
                    <p class="text-gray-600 mb-4"><%= quest.description %></p>

                    <!-- Submitted At -->
                    <p class="text-sm text-gray-500 mb-4">Submitted At: <%= quest.submittedAt %></p>

                    <!-- Action Buttons -->
                    <div class="flex items-center space-x-4">
                        <!-- Completed Radio Button -->
                        <label class="flex items-center space-x-2">
                            <input 
                                type="radio" 
                                name="questStatus[<%= quest.id %>]" 
                                value="completed" 
                                id="completed-<%= quest.id %>" 
                                class="text-green-500"
                            >
                            <span class="text-gray-700">Completed</span>
                        </label>

                        <!-- Canceled Radio Button -->
                        <label class="flex items-center space-x-2">
                            <input 
                                type="radio" 
                                name="questStatus[<%= quest.id %>]" 
                                value="canceled" 
                                id="canceled-<%= quest.id %>" 
                                class="text-red-500"
                            >
                            <span class="text-gray-700">Cancel</span>
                        </label>
                    </div>
                </div>
            <% }) %>

            <!-- Save Button -->
            <div class="mt-6 flex justify-center">
                <button 
                    type="submit" 
                    class="bg-green-500 text-white py-2 px-4 rounded-md shadow hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500">
                    Save Changes
                </button>
            </div>
        </form>

        <!-- Back Button -->
        <div class="mt-4 flex justify-center">
            <a href="index.html" 
               class="bg-blue-500 text-white py-2 px-4 rounded-md shadow hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                Back to Home
            </a>
        </div>
    </div>
</body>

</html>
