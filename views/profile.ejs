<!DOCTYPE html>
<html lang="en">

<body>
    <div class="container">
        <div class="profile-header">
            <div>
                <h1 id="name">
                    <%= name %>
                </h1>
            </div>
        </div>

        <div class="profile-details">
            <h2>My Interests</h2>
            <p id="interests">
                <%= interests %>
            </p>

            <h2>My Location</h2>
            <p id="location">
                <%= location %>
            </p>

            <div class="contact-info">
                <h2>Contact Information</h2>
                <p>Email: <a id="email" href="#">
                        <%= email %>
                    </a></p>
            </div>
        </div>
    </div>
    <!-- Visible button to submit the data -->
    <button id="submitButton">Edit</button>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const submitButton = document.getElementById('submitButton');

            // Attach an event listener to the button to handle submission
            submitButton.addEventListener('click', function () {
                // Prepare the data you want to send
                const formData = new FormData();
                formData.append('name', '<%= name %>');
                formData.append('interests', '<%= interests %>');
                formData.append('location', '<%= location %>');
                formData.append('email', '<%= email %>');

                // Send the data using fetch API to the backend (POST request)
                fetch('/api/submit', {
                    method: 'POST',
                    body: formData
                })
                    .then(response => {
                        if (response.ok) {
                            console.log('Data submitted successfully');
                        } else {
                            console.error('Failed to submit data');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            });
        });
    </script>
</body>

</html>