<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Side Quest</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-2xl mx-auto my-6">
        <!-- Side Quest Text Section -->
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Side Quest:</h2>
        <div class="text-gray-700 text-lg whitespace-pre-line mb-6">
            <%- sideQuestText %>
        </div>

        <!-- Activities Section -->
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Activities in London</h2>

        <% if (data && data.length > 0) { %>
            <% data.forEach(category => { %>
                <div class="category mb-6">
                    <h3 class="text-xl font-semibold text-gray-800"><%= category.Category %></h3>
                    <div class="mt-4">
                        <% category.Items.forEach(item => { %>
                            <div class="activity mb-4">
                                <!-- Display the Name and Description of each item -->
                                <h4 class="text-lg font-medium text-blue-600"><%= item.Name %></h4>
                                <p class="text-gray-600"><%= item.Description %></p>
                            </div>
                        <% }) %>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-gray-600">No activities available at the moment.</p>
        <% } %>

        <!-- Back Button Section -->
        <div class="mt-6 flex justify-center">
            <a href="../" class="bg-blue-500 text-white py-2 px-4 rounded-md shadow hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Back</a>
        </div>
    </div>
</body>

</html>
